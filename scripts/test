#!/bin/sh -e

export PREFIX=""
if [ -d '.venv' ] ; then
    export PREFIX=".venv/bin/"
fi

tests=${1-"./tests"}

${PREFIX}pytest --cov=dc_avro ${tests} ${2} --cov-fail-under=99 --cov-report html  --cov-report term-missing  --cov-report xml
${PREFIX}black dc_avro tests --check
${PREFIX}ruff dc_avro tests
${PREFIX}mypy dc_avro
